<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/azul"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/aqua"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"

         />

    <View
        android:id="@+id/verde"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/forestgreen"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"

        />

    <View
        android:id="@+id/naranja"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/darkorange"

        app:layout_constraintTop_toBottomOf="@+id/verde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"

        />

    <View
        android:id="@+id/amarillo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/yellow"

        app:layout_constraintTop_toBottomOf="@+id/azul"
        app:layout_constraintBottom_toTopOf="@+id/morado"
        app:layout_constraintStart_toEndOf="@+id/rojo"
        app:layout_constraintEnd_toStartOf="@+id/naranja"

        app:layout_constraintHeight_percent="0.37"
        app:layout_constraintWidth_percent="0.25"

        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"

        />

    <View
        android:id="@+id/morado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple"

        app:layout_constraintTop_toBottomOf="@+id/amarillo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rojo"
        app:layout_constraintEnd_toStartOf="@+id/naranja"

        app:layout_constraintHeight_percent="0.38"
        app:layout_constraintWidth_percent="0.25"

        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"

        />

    <View
        android:id="@+id/rojo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/red"

        app:layout_constraintTop_toBottomOf="@+id/azul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/amarillo"

        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintWidth_percent="0.25"

        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"

        />




</android.support.constraint.ConstraintLayout>